@model Person
@{
    ViewData["Title"] = "PatientRecord";
    Layout = "~/Views/AdminLayout/_Layout.cshtml";
}
<div class="page-content page-container" id="page-content">
    <div class="padding">
        <div class="row container d-flex justify-content-center">
            <div class="col-xl-9 col-md-12">
                <div class="card user-card-full">
                    <div class="row m-l-0 m-r-0">
                        <div class="col-sm-3 bg-c-lite-green user-profile">
                            <div class="card-block text-center text-white">
                                <div class="m-b-25">
                                    <img src="~/Files/Imgs/@Model.Image" width="100" height="100" style="border:2px solid #363636b4;border-radius:50%" class="img-radius" alt="User-Profile-Image">
                                </div>
                                <h6 class="f-w-600">@Model.FullName</h6>
                                <br />
                                <i style="font-size:30px ;cursor: pointer;" class="fa-solid fa-check-to-slot m-t-10 f-16"></i>
                                
                            </div>
                        </div>
                        <div class="col-sm-8">
                            <div class="card-block">
                              
                                <div class="row">
                                    <div class="col-sm-8">
                                        <p class="m-b-10 f-w-600">Email</p>
                                        <h6 class="text-muted f-w-400">@Model.Email</h6>
                                    </div>
                                    <div class="col-sm-4">
                                        <p class="m-b-10 f-w-600">Adress</p>
                                        <h6 class="text-muted f-w-400">@Model.district.Name</h6>
                                    </div>

                                </div>
                                <h6 class="m-b-20 m-t-40 p-b-5 b-b-default f-w-600">Type</h6>
                                <div class="row">
                                    <div class="col-sm-4">
                                        
                                        <h6 class="text-muted f-w-400">@Model.PersonType  </h6>
                                    </div>
                                    <div class="col-sm-4">
                                        <p class="m-b-10 f-w-600">Gender</p>
                                        <h6 class="text-muted f-w-400">@Model.gender</h6>
                                    </div>
                                    <div class="col-sm-4">
                                        <p class="m-b-10 f-w-600">Reason</p>
                                        <h6 class="text-muted f-w-400">@Model.patient.Reason</h6>
                                    </div>
                                </div>
                                <h6 class="m-b-20 m-t-40 p-b-5 b-b-default f-w-600">Info</h6>
                                <div class="row">
                                    <div class="col-sm-4">
                                        <p class="m-b-10 f-w-600">Analysis</p>
                                        <h6 class="text-muted f-w-400">@Model.patient.Analyses.Count()  </h6>
                                    </div>
                                    <div class="col-sm-4">
                                       
                                    </div>
                                    <div class="col-sm-4">
                                        <p class="m-b-10 f-w-600">radiologie</p>
                                        <h6 class="text-muted f-w-400">@Model.patient.radiologies.Count()</h6>
                                    </div>
                                    
                                </div>
                                <ul class="social-link list-unstyled m-t-40 m-b-10">
                                    <li><a href="#!" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="facebook" data-abc="true"><i class="mdi mdi-facebook feather icon-facebook facebook" aria-hidden="true"></i></a></li>
                                    <li><a href="#!" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="twitter" data-abc="true"><i class="mdi mdi-twitter feather icon-twitter twitter" aria-hidden="true"></i></a></li>
                                    <li><a href="#!" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="instagram" data-abc="true"><i class="mdi mdi-instagram feather icon-instagram instagram" aria-hidden="true"></i></a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <div class="row Infobutton">

        <div class="col-sm-4">


            <button data-bs-toggle="modal" href="#exampleModalToggle" role="button">Analysis<i class="fa-sharp fa-solid fa-hospital-user fa-bounce"></i></button>


        </div>
        <div class="col-sm-4">
            <button>Radiology<i class="fa-solid fa-x-ray fa-bounce"></i></button>
        </div>
        <div class="col-sm-4">
            <button>Treatment<i class="fa-solid fa-capsules fa-bounce"></i></button>
        </div>

    </div>
</div>
   <h6 class="m-b-20 m-t-40 p-b-5 b-b-default f-w-600">Add Notes</h6>
<div class="container">
    <div class="row Infobutton">

        <div class="col-sm-4">


            <button data-bs-toggle="modal" href="#exampleModalToggle" role="button">Add Analysis<i class="fa-sharp fa-solid fa-hospital-user "></i></button>


        </div>
        <div class="col-sm-4">
            <button>Add Radiology<i class="fa-solid fa-x-ray "></i></button>
        </div>
        <div class="col-sm-4">
            <button>Add Treatment<i class="fa-solid fa-capsules "></i></button>
        </div>

    </div>
</div>
